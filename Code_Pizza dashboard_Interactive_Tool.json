{
    "title": {
      "text": "üçïPizza Restaurant Ratings based on Price Level üí∞ and Customer Experience  ‚≠ê - USA üóΩ ",
      "anchor": "middle",
      "fontSize": 20,
      "offset": 40
    },
    "data": {
      "url": "https://raw.githubusercontent.com/cmartin2020/Info_Vis/main/pizza_data_final.csv"
    },
    "config": {
      "view": {
        "stroke": "transparent"
      }
    },
    "vconcat": [
      {
        "hconcat": [
          {
            
            "layer": [
              {
                "projection": {
        "type": "albersUsa"
      },
                "width": 450,
                "height": 200,
                
                "data": {
                  "url": "https://vega.github.io/vega-datasets/data/us-10m.json",
                  "format": {
                    "type": "topojson",
                    "feature": "states"
                  }
                },
                "title": {
                  "text": "Pizza Restaurant ratings per City",
                  "offset": 10,
                  "fontSize":14
                },
                "mark": {
                  "type": "geoshape",
                  "fill": "lightgray"
                
                }
              },
              {
                "params": [
                  {
                    "name": "brush_geography",
                    "select": {
                      "type": "interval",
                      "resolve": "global"
                    }
                  }
                ],
                "transform": [
                  {
                    "filter": {
                      "param": "customer_experience_select"
                    }
                  },
                  {
                    "filter": {
                      "param": "brush_state"
                    }
                  },
                  {
                    "filter": {
                      "param": "state_select"
                    }
                  },
                  {
                    "filter": {
                      "param": "legend_select"
                    }
                  }
                ],
                "mark": {
                  "type": "circle"
                  
                },
                "encoding": {
                  "longitude": {
                    "field": "longitude",
                    "type": "quantitative"
                  },
                  "latitude": {
                    "field": "latitude",
                    "type": "quantitative"
                  },
                  "color": {
                    "field": "price_level",
                    "type": "quantitative",
                    "scale": {"domain": ["0", "1", "2", "3"], "range":["#95D840FF", "#29AF7FFF","#238A8DFF","#453781FF"]},
                    "legend": null
                  },
                  "size": {
                    "value": 50
                  },
                  "tooltip": [
                    {
                      "field": "name",
                      "title": "Restaurant name",
                      "type": "nominal"
                    },
                    {
                      "field": "city",
                      "title": "City",
                      "type": "nominal"
                    },
                    {
                      "field": "price_level_dollar",
                      "title": "Price level",
                      "type": "nominal"
                    },
                    {
                      "field": "provider_rating",
                      "title": "Customer experience rating",
                      "type": "quantitative"
                    }
                  ]
                }
              }
            ]
          },
          {
            "title": {
              "text": "Customer experience rating",
              "anchor": "middle",
              "align": "center",
              "offset": 15,
              "fontSize":14
            },
            "width": 400,
            "height": 200,
            "params": [
              {
                "name": "customer_experience_select",
                "select": {
                  "type": "point",
                  "fields": [
                    "provider_rating"
                  ]
                }
              },
              {
                "name": "legend_select",
                "select": {
                  "type": "point",
                  "fields": [
                    "price_level_dollar"
                  ]
                },
                "bind": "legend"
              }
            ],
            "transform": [
              {
                "filter": "datum.price_level "
              },
              
              {
                "filter": {
                  "param": "brush_state"
                }
              },
              {
                "filter": {
                  "param": "state_select"
                }
              },
              {
                "filter": {
                  "param": "brush_geography"
                }
              },
              {
                "filter": {
                  "param": "legend_select"
                }
              }
            ],
            "mark": "bar",
            
            "encoding": {
              "y": {
                "field": "provider_review_count",
                "type": "quantitative",
                "aggregate": "sum",
                "axis": {
                  "title": "Total customer reviews"
                }
              },
              "x": {
                "field": "provider_rating",
                "type": "nominal",
                "axis": {
                  "title":null,
                  "labelAngle": 0,

                }
              },
              "color": {
                "field": "price_level_dollar",
                "type": "nominal",
                "scale": {"domain": ["$", "$$", "$$$", "$$$$"], "range":["#95D840FF", "#29AF7FFF","#238A8DFF","#453781FF"]},
                "legend": {
                  "title": "$ Price level"
                }
              },
              "opacity": {
                "condition": {
                  "param": "customer_experience_select",
                  "value": 1
                },
                "value": 0.3
              }
            }
          }
        ],
        "spacing": 50
      },
      {
        "hconcat": [
          {
            "width": 450,
            "title": {
              "text": "Number of Pizza restaurants by price level per State",
              "anchor": "middle",
              "align": "center",
              "offset": 18
            },
            "mark": "bar",
            "params": [
              {
                "name": "state_select",
                "select": {
                  "type": "point",
                  "fields": [
                    "State"
                  ]
                }
              },
              {
                "name": "brush_state",
                "select": {
                  "type": "interval",
                  "resolve": "global"
                }
              }
            ],
            "transform": [
              {
                "filter": {
                  "param": "legend_select"
                }
              },
              {
                "filter": "datum.State "
              },
              {
                "filter": "datum.price_level "
              },
              {
                "filter": {
                  "param": "customer_experience_select"
                }
              },
              {
                "filter": {
                  "param": "brush_geography"
                }
              }
            ],
            "encoding": {
              "x": {
                "field": "State",
                "type": "nominal",
                "axis": {
                  "labelAngle": 0
                },
                "sort": "-y"
              },
              "y": {
                "field": "provider_rating",
                "type": "quantitative",
                "aggregate": "count",
                "axis": {
                  "title": "Total number of Restaurants"
                }
              },
              "color": {
                "condition": {
                  "param": "state_select",
                  "field": "price_level_dollar",
                  "legend": null,
                  "type": "nominal",
                  "scale": {"domain": ["$", "$$", "$$$", "$$$$"], "range":["#95D840FF", "#29AF7FFF","#238A8DFF","#453781FF"]}
                }
              },
              "opacity": {
                "condition": {
                  "param": "state_select",
                  "value": 0.9
                },
                "value": 0.4
              }
            }
          },
          {
            "transform": [
              {
                "filter": "datum.price_level "
              },
              {
                "filter": "datum.provider_review_count "
              }
            ],
            "title": {
              "text": "Customer experience rating for different price level",
              "anchor": "middle",
              "align": "center",
              "offset": 20
            },
            "width": 250,
            "height": 200,
            "params": [
              {
                "name": "brush_heatmap",
                "select": {
                  "type": "interval",
                  "resolve": "global"
                }
              }
            ],
            "mark": {
              "type": "rect",
              "tooltip": true
            },
            "encoding": {
              "x": {
                "field": "price_level_dollar",
                "type": "ordinal",
                "axis": {
                  "title": "Price level",
                  "labelAngle": 0
                }
              },
              "y": {
                "field": "provider_rating",
                "type": "ordinal",
                "axis": {
                  "title": "Customer experience rating"
                },
                "sort": "descending"
              },
              "color": {
                "aggregate": "count",
                "type": "quantitative",
                "scale": {
                  "scheme": "viridis",
                  "reverse": true
                },
                "legend": {
                  "title": "Total of records by restaurant",
                  "orient": "right",
                  "titleAnchor": "middle"
                }
              },
              "opacity": {
                "condition": {
                  "param": "brush_heatmap",
                  "value": 0.8
                },
                "value": 0
              }
            }
          }
        ],
        "spacing": 50
      }
    ],
    "spacing": 70
  }